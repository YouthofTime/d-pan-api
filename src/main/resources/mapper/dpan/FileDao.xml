<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zym.dpan.dao.FileDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.zym.dpan.entity.FileEntity" id="fileMap">
        <result property="fileId" column="file_id"/>
        <result property="filename" column="filename"/>
        <result property="realPath" column="real_path"/>
        <result property="fileSize" column="file_size"/>
        <result property="fileSizeDesc" column="file_size_desc"/>
        <result property="fileSuffix" column="file_suffix"/>
        <result property="filePreviewContentType" column="file_preview_content_type"/>
        <result property="identifier" column="identifier"/>
        <result property="createUser" column="create_user"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        file_id, filename, real_path, file_size, file_size_desc, file_suffix, file_preview_content_type, identifier, create_user, create_time
    </sql>

    <select id="selectByIdentifier" resultMap="fileMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            d_pan_file
        where
            identifier= #{identifier}
    </select>

</mapper>